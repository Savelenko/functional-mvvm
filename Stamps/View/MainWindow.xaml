<Window x:Class="Stamps.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stamps.View"
        mc:Ignorable="d"
        Title="Stamps demo" Height="350" Width="525">
    <StackPanel>
        <ListBox ItemsSource="{Binding Path=Stamps, Mode=OneTime}"/>
        <StackPanel Orientation="Horizontal">
            <Label>Description</Label>
            <TextBox Name="newStampDescription" Width="200" Margin="0,0,4,0"/>
            <Label>Value</Label>
            <TextBox Name="newStampValue" Width="40" Margin="0,0,4,0"></TextBox>
            <Button Click="Button_Click">Add</Button>
        </StackPanel>
    </StackPanel>
</Window>
